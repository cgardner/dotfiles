[user]
    name = Craig Gardner
    mail = craig.gardner@cdk.com
    email = craig.gardner@cdk.com
[alias]
    co = checkout
    mrg = merge --no-ff
    ms = merge --squash
    ci = commit -v
    b = branch
    cl = clean -fd -e .vagrant
    diff = diff --ignore-space-at-eol

    # Git Flow Shortcuts
    ffs = flow feature start
    ffc = flow feature checkout
    ffs = flow feature start
    fff = flow feature finish
    frs = flow release start
    frf = flow release finish

# Found these from https://github.com/gabebw/dotfiles/blob/master/gitconfig.erb
    st = status -sb
    tst = status -sb # this + "gi" = spell correction
    lol = log --graph --all --pretty=format:'%Cred%h%Creset %Cblue%an%Creset: %s -%Creset%C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    a = add -p
    up = !git fetch upstream && git pull --rebase upstream master
    update = !git fetch && git pull --rebase
    bd = branch -d
    news = log -p HEAD@{1}..HEAD@{0}
    pt = !git tag -l | xargs git tag -d && git fetch -t
[color]
    ui = auto
[core]
	excludesfile = /Users/gardnerc/.gitignore
    quotepath = false
	whitespace = cr-at-eol
	editor = vim
	autocrlf = input
[diff]
    algorithm = patience
[push]
    default = simple
[init]
    templatedir = ~/src/dotfiles/repo/git_template
[fetch]
	recurseSubmodules = false
	prune = true
[url "ssh://git@stash.cdk.com"]
	insteadOf = https://stash.cdk.com/scm
[url "ssh://git@stash.cdk.com"]
	insteadOf = http://stash.cdk.com/scm
[url "ssh://git@"]
	insteadOf = git://
[rerere]
	enabled = 1
[credential]
	helper = !aws --profile gardnerc_sandbox codecommit credential-helper $@
	UseHttpPath = true
[commit]
    template = ~/src/dotfiles/git/commit-template
