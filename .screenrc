shell /bin/bash

hardstatus on
hardstatus alwayslastline

# # allow bold colors - necessary for some reason
attrcolor b ".I"
hardstatus string "%{.b}%?%-Lw%?%{.r}%n*%f %t%?(%u)%?%{-}%?%+Lw%? %=%{..G}%H%=%{..Y} %D %d/%M/%Y %C:%s%a "
defscrollback 10000
maptimeout 5

defbce "on"

startup_message off

screen -t console 1
screen -t development 0 vim
